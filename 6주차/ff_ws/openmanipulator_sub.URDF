<robot name="openmanipulator">
  <!-- Base Link -->
  <link name="base_link"/>

  <!-- Link 1 -->
  <link name="r1_link"/>

  <!-- Link 2 -->
  <link name="r2_link"/>

  <!-- Link 3 -->
  <link name="r3_link"/>

  <!-- Link 4 -->
  <link name="r4_link"/>


  <!-- Joint 1 -->
  <joint name="j1" type="revolute">
    <origin xyz="0 0 0.077" rpy="1.5707963267949 0 0"/>
    <parent link="base_link"/>
    <child link="r1_link"/>
    <axis xyz="0 0 1"/>
  </joint>

  <!-- Joint 2 -->
  <joint name="j2" type="revolute">
    <origin xyz="0.13 0 0" rpy="0 0 0"/>
    <parent link="r1_link"/>
    <child link="r2_link"/>
    <axis xyz="0 0 1"/>
  </joint>

  <!-- Joint 3 -->
  <joint name="j3" type="revolute">
    <origin xyz="0.124 0 0" rpy="0 0 0"/>
    <parent link="r2_link"/>
    <child link="r3_link"/>
    <axis xyz="0 0 1"/>
  </joint>

  <!-- Joint 4 -->
  <joint name="j4" type="revolute">
    <origin xyz="0.126 0 0" rpy="0 0 0"/>
    <parent link="r3_link"/>
    <child link="r4_link"/>
    <axis xyz="0 0 1"/>
  </joint>

</robot>
